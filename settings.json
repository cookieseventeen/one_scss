{
    "terminal.integrated.shellArgs.windows": ["C:\\Windows\\System32\\cmd.exe /k nodevars.bat"],
    "emmet.triggerExpansionOnTab": true,
    "window.zoomLevel": 0,
    "git.autofetch": true,
    "git.enableSmartCommit": true,
    "liveServer.settings.port": 8080, //設定liveserver port
    "liveSassCompile.settings.formats": [
      // {
      //   "format": "expanded", //正常寫法
      //   "extensionName": ".css", //附檔名
      //   "savePath": "~/../css", //存檔路徑
      // },
      // 平常設定
      {
        "format": "expanded", //壓縮
        "extensionName": ".css", //附檔名
        // "savePath": "~/../../css", //存檔路徑 original
        // "savePath": "~../css", //存檔路徑 套版例如brilong
        "savePath": "~css", //存檔路徑 同目錄
      },
      {
        "format": "compressed", //壓縮
        "extensionName": ".min.css", //附檔名
        // "savePath": "~/../../css", //存檔路徑 original
        // "savePath": "~../css", //存檔路徑 套版例如brilong
        "savePath": "~", //存檔路徑 同目錄
      }
    ],
    "[javascript]": {
      "editor.defaultFormatter": "HookyQR.beautify"
    },
    "liveSassCompile.settings.autoprefix": ["> 1%", "last 2 versions"]
}

